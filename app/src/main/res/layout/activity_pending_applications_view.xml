<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:backgroundTint="@color/offwhite"
    tools:context=".admin.PendingApplicationsView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending Loan Applications"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_pending_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0 applications pending review"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Review and approve/deny loan requests"
                    android:textColor="#FFEAA7"
                    android:textSize="12sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Quick Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="Refresh"
                android:textAllCaps="false"
                android:drawablePadding="8dp"
                android:backgroundTint="@color/colorPrimary"
                android:drawableStart="@drawable/ic_menu_gallery" />

            <Button
                android:id="@+id/btn_approve_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:backgroundTint="#0A9233"
                android:text="Approve All"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_menu_gallery" />

            <Button
                android:id="@+id/btn_deny_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#9F2933"
                android:text="Deny All"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_menu_gallery" />

        </LinearLayout>


        <!-- Applications List Container -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Applications List"
            android:textColor="#2C3E50"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Dynamic Content Container -->
        <LinearLayout
            android:id="@+id/ll_applications_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Applications will be added here dynamically -->

        </LinearLayout>

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/ll_empty_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_menu_gallery"
                android:contentDescription="No applications"
                android:tint="#BDC3C7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No pending applications"
                android:textColor="#7F8C8D"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All loan applications have been processed"
                android:textColor="#95A5A6"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Loading State -->
        <LinearLayout
            android:id="@+id/ll_loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">

            <ProgressBar
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:indeterminate="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading applications..."
                android:textColor="#7F8C8D"
                android:textSize="14sp"
                android:layout_marginTop="16dp" />

        </LinearLayout>

        <!-- Bottom Padding -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

    </LinearLayout>

</ScrollView>