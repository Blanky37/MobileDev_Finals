<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_loan_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Loan #001"
                android:textColor="#2C3E50"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:textColor="#F39C12"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_employee_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Employee: EMP001"
            android:textColor="#2C3E50"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_loan_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type: Emergency Loan"
            android:textColor="#7F8C8D"
            android:textSize="13sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amount: â‚±25,000.00"
            android:textColor="#7F8C8D"
            android:textSize="13sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_months"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Term: 6 months"
            android:textColor="#7F8C8D"
            android:textSize="13sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Applied: 01/15/2024"
            android:textColor="#7F8C8D"
            android:textSize="13sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>